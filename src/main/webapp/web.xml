<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.shop.controller.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allDrivers</servlet-name>
        <servlet-class>com.shop.controller.drivers.AllDriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allDrivers</servlet-name>
        <url-pattern>/drivers/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>com.shop.controller.manufacturers.CreateManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>com.shop.controller.drivers.CreateDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/drivers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>com.shop.controller.cars.CreateCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/cars/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>com.shop.controller.cars.drivers.AddDriverToCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allManufacturers</servlet-name>
        <servlet-class>com.shop.controller.manufacturers.AllManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allManufacturers</servlet-name>
        <url-pattern>/manufacturers/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>com.shop.controller.cars.AllCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/cars/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>com.shop.controller.manufacturers.DeleteManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>com.shop.controller.drivers.DeleteDriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>com.shop.controller.cars.DeleteCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>
</web-app>
